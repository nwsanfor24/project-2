<main>
    <div class="row">
        <div id="waves">
            <div class="container">
                <a href="/home" class="waves-effect waves-light white-text homeMeditation btn">Home<i
                        class="material-icons left">cloud</i></a>
                {{#each meditate}}
                <div class="container">
                    <div class="col s12 m4">
                        <div class="card small">
                            <div class="card-image">
                                <img src="{{album.images.1.url}}">
                            </div>
                            <p>name: {{name}}</p>
                            <p>artist: {{album.artists.0.name}}</p>
                        </div>
                        <div class="card-content black-text">
                            <p>popularity: {{popularity}}</p>
                        </div>
                        <div class="card-action black-text">
                            <a href="#" class="favorite" data-img="{{album.images.1.url}}"
                                data-url="{{external_urls.spotify}}"
                                data-text="name: {{name}} | artist: {{album.artists.0.name}}"><i
                                    class="material-icons">favorite_border</i></a>
                            <a href="{{external_urls.spotify}}" target="_blank"><i class="material-icons">launch</i></a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</main>